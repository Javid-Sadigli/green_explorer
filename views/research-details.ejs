<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/details.css">
</head>
<body>
    <%- include('./includes/navbar.ejs')%>
    <section class="details-section">
        <div class="title-div">
            <h1 class="title">
                Details
            </h1>
        </div>
        <div class="research-card-div">
            <div class="research-card">
                <div class="research-title-div">
                    <h1 class="research-title">
                        <%= research.title %>
                    </h1>
                </div>
                <div class="research-image-div">
                    <div class="research-image">
                        <img src="/data/images/<%= research.image_filename %>" >
                    </div>
                </div>
                <div class="research-description-div">
                    <h2 class="description-title">
                        Description : 
                    </h2>
                    <p class="description-text">
                        <%= research.description %>
                    </p>
                </div>
                <div class="research-adress-div">
                    <h2 class="adress-title">
                        Adress : 
                    </h2>
                    <p class="adress-text">
                        <%= research.adress %>
                    </p>
                </div>
            </div>
        </div>
    </section>
</body>
</html>