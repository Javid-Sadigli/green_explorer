<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/researchs.css">
</head>
<body>
    <%- include('./includes/navbar.ejs')%>
    <section class="researchs-section">
        <% if (researchs.length > 0) { %>
            <div class="title-div">
                <h1 class="title">
                    My researches
                </h1>
            </div>
            <div class="research-cards">
                <% researchs.forEach(research => { %>
                    <div class="research-card">
                        <div class="research-title-div">
                            <h1 class="research-title">
                                <%= research.title %>
                            </h1>
                        </div>
                        <div class="research-img-div">
                            <div class="research-img">
                                <img src="/data/images/<%= research.image_filename %>">
                            </div>
                        </div>
                        <div class="link-div">
                            <a href="/researchs/<%= research._id %>" class="link">Details</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else {%>
            <div class="title-div">
                <h1 class="title">
                    No research
                </h1>
            </div>
        <% } %>

    </section>
</body>
</html>